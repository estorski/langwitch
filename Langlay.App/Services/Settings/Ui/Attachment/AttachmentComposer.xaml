<UserControl x:Class="Product.SettingsUi.AttachmentComposer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Product.SettingsUi"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500">
    <StackPanel>
        <StackPanel x:Name="StackPanel_Editors" />
        <ItemsControl ItemsSource="{Binding}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:AttachmentEditor 
                        DataContext="{Binding}" 
                        RemoveClick="AttachmentEditor_RemoveClick"
                        Changed="AttachmentEditor_Changed"
                        Margin="0 0 0 4" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button Content="Add an application layout attachment"
                x:Name="btnAdd"
                Padding="4 2"
                Click="btnAdd_Click"
                Width="230" HorizontalAlignment="Left" />
    </StackPanel>
</UserControl>
